
<ul class="list-group">
  <li class="list-group-item active">
    Users
  </li>
  <% @users.each do |user| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to user.name, user %>
      <span class="badge badge-primary badge-pill"><%= user.rated_movies.count %></span>
    </li>
  <% end %>
</ul>
